<h1>I hear you like burgers?</h1>

<h2>Burgers that have not been devoured</h2>

<ul>
   {{#each burgers}} 
          {{#unless devoured}}
            <ul>
              {{burger_name}}
              <form action="/burgers/{{id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button type="submit">Devour</button>
              </form>
            </ul>  
          {{/unless}} 
        {{/each}}
</ul>

<h2>Burgers that have been devoured</h2>

 </div>
  <div class="col-md-6">
    <hr>
    <ul>       
        {{#each burgers}} 
          {{#if devoured}}
            <ul>
              {{burger_name}}
            </ul>  
          {{/if}} 
        {{/each}}
    </ul>
  </div>
</div>

<h2>Add your favorite burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
